<%=content_for :data_controls do%>
<%=link_to "Upload File",new_spud_admin_medium_path(),:class => "btn btn-primary",:title => "Upload File"%>
<%end%>
<%=content_for :detail do%>
	<div class="page_list">
			<%@media.each do |media|%>
				<div class="page_row">
					
				<span class="row_meta">
					<%=image_tag(media.image_from_type,:class => "size-50-thumb")%>
					<%=link_to media.attachment.url.split("/").last,media.attachment.url %>
					<% if media.is_protected %>
						<i class="icon-lock"></i>
					<% end %>
				</span>

				<span class="edit_controls"><%=link_to "Remove",spud_admin_medium_path(:id => media.id),:method => :delete,:class => 'btn btn-danger',:confirm => "Are you sure you want to remove this file?"%></span>
				<br style="clear:both;"/>
			</div>
			<%end%>
			<%=will_paginate @media%>

	</div>

<%end%>
